---
const {
  title = 'AI Safety Unconference 2026',
  description = 'A gathering for researchers, practitioners, and policymakers shaping the future of safe AI.',
  pageClass = '',
  ogImage,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      :root {
        color-scheme: light;
        font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        background-color: #f9fafb;
        color: #111827;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        background-color: #f9fafb;
      }

      main {
        flex: 1;
      }

      footer {
        padding: 1rem;
        text-align: center;
        font-size: 0.8rem;
        color: #6b7280;
      }

      a {
        color: inherit;
      }

      a:focus-visible {
        outline: 2px solid currentColor;
        outline-offset: 2px;
        border-radius: 2px;
      }

      .page {
        padding-inline: clamp(1rem, 4vw, 2rem);
        margin: 0 auto;
      }

      .page-wide {
        padding-inline: 0;
      }
    </style>
  </head>
  <body class={pageClass}>
    <main class="page">
      <slot />
    </main>
    <footer>
      Â© {new Date().getFullYear()} <a href="https://horizonomega.org" target="_blank" rel="noopener noreferrer">Horizon Omega</a>.
    </footer>
  </body>
</html>
